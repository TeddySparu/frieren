    <script>
        // Curseur custom
        const cursor = document.querySelector('.custom-cursor');
        let mouseX = 0, mouseY = 0;
        
        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
        });
        
        function updateCursor() {
            cursor.style.left = mouseX + 'px';
            cursor.style.top = mouseY + 'px';
            requestAnimationFrame(updateCursor);
        }
        updateCursor();
        
        // G√©n√©ration de particules
        function createParticle() {
            const particle = document.createElement('div');
            particle.className = 'particle';
            
            const size = Math.random() * 10 + 5;
            const colors = ['#ff00ff', '#00ffff', '#ffff00', '#ff0080', '#8000ff'];
            const color = colors[Math.floor(Math.random() * colors.length)];
            
            particle.style.width = size + 'px';
            particle.style.height = size + 'px';
            particle.style.background = color;
            particle.style.left = Math.random() * 100 + '%';
            particle.style.boxShadow = `0 0 ${size*2}px ${color}`;
            particle.style.animationDelay = Math.random() * 2 + 's';
            particle.style.animationDuration = (Math.random() * 6 + 4) + 's';
            
            document.body.appendChild(particle);
            
            setTimeout(() => {
                particle.remove();
            }, 8000);
        }
        
        // Cr√©er des particules en continu
        setInterval(createParticle, 200);
        
        // Effet matrix rain
        function createMatrixRain() {
            const chars = '01„Ç¢„Ç§„Ç¶„Ç®„Ç™„Ç´„Ç≠„ÇØ„Ç±„Ç≥„Çµ„Ç∑„Çπ„Çª„ÇΩ„Çø„ÉÅ„ÉÑ„ÉÜ„Éà';
            const rain = document.createElement('div');
            rain.className = 'matrix-rain';
            rain.textContent = chars[Math.floor(Math.random() * chars.length)];
            rain.style.left = Math.random() * 100 + '%';
            rain.style.animationDelay = Math.random() * 2 + 's';
            rain.style.animationDuration = (Math.random() * 3 + 3) + 's';
            
            document.body.appendChild(rain);
            
            setTimeout(() => {
                rain.remove();
            }, 6000);
        }
        
        setInterval(createMatrixRain, 300);
        
        // Effet de click
        document.addEventListener('click', (e) => {
            const effect = document.createElement('div');
            effect.className = 'click-effect';
            effect.style.left = (e.clientX - 50) + 'px';
            effect.style.top = (e.clientY - 50) + 'px';
            
            document.body.appendChild(effect);
            
            setTimeout(() => {
                effect.remove();
            }, 600);
        });
        
        // Effet de tremblement al√©atoire du texte
        const autismText = document.getElementById('autismText');
        setInterval(() => {
            if (Math.random() < 0.1) {
                autismText.style.filter = 'blur(' + (Math.random() * 3) + 'px)';
                setTimeout(() => {
                    autismText.style.filter = 'none';
                }, 100);
            }
        }, 500);
        
        // Changement de couleur de fond al√©atoire
        setInterval(() => {
            document.body.style.filter = `hue-rotate(${Math.random() * 360}deg) saturate(${1 + Math.random()}`;
            setTimeout(() => {
                document.body.style.filter = 'none';
            }, 200);
        }, 3000);
        
        // Sons psych√©d√©liques (comment√© car pas d'audio dans les artefacts)
